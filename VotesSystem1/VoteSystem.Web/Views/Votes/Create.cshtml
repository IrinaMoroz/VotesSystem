                    @Html.ValidationMessageFor(model => model.Question.Name, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>

        <div id ="btn" class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

