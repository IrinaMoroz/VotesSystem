                @Html.DropDownListFor(model=> model.Vote.CategoryID, new SelectList(Model.Categories, "ID", "Name"))
                @Html.ValidationMessageFor(model => model.Vote.Category, "", new { @class = "text-danger" })

            </div>
        </div>

